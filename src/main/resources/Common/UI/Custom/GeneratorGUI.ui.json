{
  "$schema": "fabrica-ui-schema",
  "$comment": "Generator GUI Layout - Adapt to Hytale's actual UI format when documented",

  "id": "fabrica:generator_gui",
  "title": "Generator",
  "width": 176,
  "height": 166,

  "background": {
    "texture": "Common/UI/Custom/MachineGUI_Background.png",
    "width": 176,
    "height": 166
  },

  "elements": [
    {
      "id": "title",
      "type": "label",
      "x": 8,
      "y": 6,
      "text": "Generator",
      "color": "#404040"
    },

    {
      "id": "fuel_slot",
      "type": "slot",
      "x": 56,
      "y": 53,
      "width": 18,
      "height": 18,
      "slotIndex": 0,
      "background": "Common/UI/Custom/Slot_Background.png",
      "tooltip": "Fuel Slot - Insert coal, charcoal, or wood"
    },

    {
      "id": "burn_progress",
      "type": "progress_bar",
      "x": 56,
      "y": 36,
      "width": 16,
      "height": 16,
      "direction": "up",
      "emptyTexture": "Common/UI/Custom/BurnProgress_Empty.png",
      "fullTexture": "Common/UI/Custom/BurnProgress_Full.png",
      "dataBinding": "burnProgress"
    },

    {
      "id": "energy_bar",
      "type": "progress_bar",
      "x": 152,
      "y": 8,
      "width": 16,
      "height": 52,
      "direction": "up",
      "emptyTexture": "Common/UI/Custom/EnergyBar_Empty.png",
      "fullTexture": "Common/UI/Custom/EnergyBar_Full.png",
      "dataBinding": "energyPercent"
    },

    {
      "id": "power_indicator",
      "type": "indicator",
      "x": 80,
      "y": 36,
      "width": 8,
      "height": 8,
      "offTexture": "Common/UI/Custom/PowerIndicator_Off.png",
      "onTexture": "Common/UI/Custom/PowerIndicator_On.png",
      "dataBinding": "isActive"
    },

    {
      "id": "power_output_label",
      "type": "label",
      "x": 95,
      "y": 20,
      "text": "Output:",
      "color": "#404040"
    },

    {
      "id": "power_output_value",
      "type": "dynamic_label",
      "x": 95,
      "y": 32,
      "dataBinding": "powerOutput",
      "format": "{0} W",
      "color": "#00AA00"
    },

    {
      "id": "fuel_remaining_label",
      "type": "label",
      "x": 8,
      "y": 75,
      "text": "Burn Time:",
      "color": "#404040"
    },

    {
      "id": "fuel_remaining_value",
      "type": "dynamic_label",
      "x": 70,
      "y": 75,
      "dataBinding": "burnTimeRemaining",
      "format": "{0}s",
      "color": "#666666"
    },

    {
      "id": "player_inventory",
      "type": "player_inventory",
      "x": 8,
      "y": 84,
      "slotSize": 18,
      "rows": 4,
      "cols": 9
    }
  ],

  "dataBindings": {
    "burnProgress": {
      "source": "machine",
      "property": "burnProgress",
      "type": "float",
      "range": [0.0, 1.0]
    },
    "energyPercent": {
      "source": "machine",
      "property": "energyBufferPercent",
      "type": "float",
      "range": [0.0, 1.0]
    },
    "isActive": {
      "source": "machine",
      "property": "isActive",
      "type": "boolean"
    },
    "powerOutput": {
      "source": "machine",
      "property": "currentProductionRate",
      "type": "float"
    },
    "burnTimeRemaining": {
      "source": "machine",
      "property": "burnTimeRemaining",
      "type": "float",
      "format": "%.1f"
    }
  }
}
