{
  "$schema": "fabrica-ui-schema",
  "$comment": "Battery GUI Layout - Adapt to Hytale's actual UI format when documented",

  "id": "fabrica:battery_gui",
  "title": "Battery",
  "width": 176,
  "height": 166,

  "background": {
    "texture": "Common/UI/Custom/MachineGUI_Background.png",
    "width": 176,
    "height": 166
  },

  "elements": [
    {
      "id": "title",
      "type": "label",
      "x": 8,
      "y": 6,
      "text": "Battery",
      "color": "#404040"
    },

    {
      "id": "energy_bar_large",
      "type": "progress_bar",
      "x": 62,
      "y": 18,
      "width": 52,
      "height": 52,
      "direction": "up",
      "emptyTexture": "Common/UI/Custom/EnergyBar_Empty.png",
      "fullTexture": "Common/UI/Custom/EnergyBar_Full.png",
      "dataBinding": "chargePercent",
      "$comment": "Large centered energy display"
    },

    {
      "id": "charge_label",
      "type": "label",
      "x": 8,
      "y": 22,
      "text": "Stored:",
      "color": "#404040"
    },

    {
      "id": "charge_value",
      "type": "dynamic_label",
      "x": 8,
      "y": 34,
      "dataBinding": "storedEnergy",
      "format": "{0}",
      "color": "#00AAAA"
    },

    {
      "id": "capacity_label",
      "type": "label",
      "x": 8,
      "y": 50,
      "text": "Capacity:",
      "color": "#404040"
    },

    {
      "id": "capacity_value",
      "type": "dynamic_label",
      "x": 8,
      "y": 62,
      "dataBinding": "maxCapacity",
      "format": "{0}",
      "color": "#666666"
    },

    {
      "id": "percent_label",
      "type": "dynamic_label",
      "x": 72,
      "y": 40,
      "dataBinding": "chargePercent",
      "format": "{0}%",
      "color": "#FFFFFF",
      "fontSize": 14,
      "centered": true
    },

    {
      "id": "mode_label",
      "type": "label",
      "x": 120,
      "y": 22,
      "text": "Mode:",
      "color": "#404040"
    },

    {
      "id": "mode_value",
      "type": "dynamic_label",
      "x": 120,
      "y": 34,
      "dataBinding": "mode",
      "color": "#00AA00"
    },

    {
      "id": "rate_label",
      "type": "label",
      "x": 120,
      "y": 50,
      "text": "Rate:",
      "color": "#404040"
    },

    {
      "id": "rate_value",
      "type": "dynamic_label",
      "x": 120,
      "y": 62,
      "dataBinding": "currentRate",
      "format": "{0} W",
      "color": "#666666"
    },

    {
      "id": "player_inventory",
      "type": "player_inventory",
      "x": 8,
      "y": 84,
      "slotSize": 18,
      "rows": 4,
      "cols": 9
    }
  ],

  "dataBindings": {
    "chargePercent": {
      "source": "machine",
      "property": "chargePercentage",
      "type": "float",
      "range": [0.0, 100.0]
    },
    "storedEnergy": {
      "source": "machine",
      "property": "storedEnergyFormatted",
      "type": "string"
    },
    "maxCapacity": {
      "source": "machine",
      "property": "maxCapacityFormatted",
      "type": "string"
    },
    "mode": {
      "source": "machine",
      "property": "modeString",
      "type": "string",
      "$comment": "Charging, Discharging, or Idle"
    },
    "currentRate": {
      "source": "machine",
      "property": "currentTransferRate",
      "type": "float"
    }
  }
}
