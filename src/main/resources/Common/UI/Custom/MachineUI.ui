{
  "$schema": "https://hytale.com/schemas/ui.schema.json",
  "name": "FabricaMachineUI",
  "type": "Page",
  "properties": {
    "width": 400,
    "height": 300,
    "centered": true,
    "background": "#2a2a2a"
  },
  "children": [
    {
      "type": "Panel",
      "id": "header",
      "properties": {
        "x": 0,
        "y": 0,
        "width": "100%",
        "height": 40,
        "background": "#3a3a3a"
      },
      "children": [
        {
          "type": "Label",
          "id": "machineTitle",
          "properties": {
            "x": 10,
            "y": 10,
            "text": "Machine",
            "fontSize": 18,
            "color": "#ffffff"
          }
        }
      ]
    },
    {
      "type": "Panel",
      "id": "content",
      "properties": {
        "x": 10,
        "y": 50,
        "width": 380,
        "height": 200
      },
      "children": [
        {
          "type": "Slot",
          "id": "inputSlot",
          "properties": {
            "x": 20,
            "y": 60,
            "width": 48,
            "height": 48,
            "slotType": "input"
          }
        },
        {
          "type": "ProgressBar",
          "id": "progressBar",
          "properties": {
            "x": 90,
            "y": 70,
            "width": 100,
            "height": 24,
            "value": 0,
            "max": 100,
            "foreground": "#4CAF50",
            "background": "#1a1a1a"
          }
        },
        {
          "type": "Slot",
          "id": "outputSlot",
          "properties": {
            "x": 210,
            "y": 60,
            "width": 48,
            "height": 48,
            "slotType": "output"
          }
        },
        {
          "type": "Panel",
          "id": "powerInfo",
          "properties": {
            "x": 20,
            "y": 130,
            "width": 200,
            "height": 60,
            "background": "#1a1a1a"
          },
          "children": [
            {
              "type": "Label",
              "id": "powerLabel",
              "properties": {
                "x": 10,
                "y": 10,
                "text": "Power: 0 W",
                "fontSize": 12,
                "color": "#aaaaaa"
              }
            },
            {
              "type": "Label",
              "id": "energyLabel",
              "properties": {
                "x": 10,
                "y": 30,
                "text": "Energy: 0 J",
                "fontSize": 12,
                "color": "#aaaaaa"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Button",
      "id": "closeButton",
      "properties": {
        "x": 360,
        "y": 5,
        "width": 30,
        "height": 30,
        "text": "X",
        "action": "close"
      }
    }
  ]
}
