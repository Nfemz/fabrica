@SlotBackground = PatchStyle(TexturePath: "Slot_Background.png");
@ProgressEmpty = PatchStyle(TexturePath: "ProgressArrow_Empty.png");
@EnergyEmpty = PatchStyle(TexturePath: "EnergyBar_Empty.png");
@MachineBackground = PatchStyle(TexturePath: "MachineGUI_Background.png");

Group {
    LayoutMode: Center;
    Anchor: (Width: 176, Height: 166);

    Group #processingPanel {
        Background: @MachineBackground;
        Anchor: (Width: 176, Height: 166);
        LayoutMode: Top;
        Padding: (Horizontal: 8, Vertical: 6);

        Label #title {
            Style: (FontSize: 14, Alignment: Left);
            Text: "Processing";
        }
    }
}
