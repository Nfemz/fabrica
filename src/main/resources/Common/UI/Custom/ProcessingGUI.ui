Group {
    LayoutMode: Center;
    Anchor: (Width: 200, Height: 100);

    Group #ProcessingPanel {
        Background: #000000(0.8);
        Anchor: (Width: 200, Height: 100);
        Padding: (Horizontal: 10, Vertical: 10);
        LayoutMode: Top;

        Label #Title {
            Style: (FontSize: 16, HorizontalAlignment: Center);
            Text: "Processing";
        }

        Label #ProgressLabel {
            Style: (FontSize: 12);
            Text: "Progress: 0%";
        }
    }
}
